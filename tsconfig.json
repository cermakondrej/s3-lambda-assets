{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "populate.ts",
    "gulpfile.ts",
    "migrations/*.ts",
    "src/plugins/**/ui/*",
    "**/*.spec.ts",
    "src/ui-extensions/*",
  ],
  "ts-node": {
    "files": true
  }
}
